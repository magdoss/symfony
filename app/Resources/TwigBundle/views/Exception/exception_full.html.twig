{% extends 'TwigBundle::layout.html.twig' %}

{% block head %}
    <link href="{{ asset('bundles/framework/css/exception.css') }}" rel="stylesheet" type="text/css" media="all" />
{% endblock %}

{% block title %}
    {{ exception.message }} ({{ status_code }} {{ status_text }})
{% endblock %}

{% block body %}
    {# START: GUI Create new page link #}
    {% if status_code == 404 %}
        <div class="block">
            <h1>
                <a style="text-decoration: none;" href="{{ path('guiCreateController', {'uri': app.request.getPathInfo()}) }}">
                    <img src="data:image/png;base64,"/>
                    Please click here if you would like to create a new page at this location.
                </a>
            </h1>
        </div>
    {% endif %}
    {# END: GUI Create new page link #}

    {% include 'TwigBundle:Exception:exception.html.twig' %}
{% endblock %}
